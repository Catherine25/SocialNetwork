<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialNetwork.UI.RequestDialog">
  <ContentView.Content>
      <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
          
            <Entry x:Name="textEntry" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>
            <Button x:Name="ConfirmBt" Grid.Row="2" Grid.Column="1"/>
            <Button x:Name="CancelBt" Grid.Row="2" Grid.Column="2"/>
        </Grid>
  </ContentView.Content>
</ContentView>